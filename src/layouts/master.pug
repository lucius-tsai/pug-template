doctype html
html(lang='zh-Hant-TW')
	head
		block urlVariable
			- var url = './'
		// Required meta tags
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		// Bootstrap CSS
		link(rel='stylesheet', href='assets/css/base.css')
		block styles
	
	body
		block content


		// jQuery first, then Tether, then Bootstrap JS.
		script(src= url + 'assets/plugins/jquery-3.3.1.min.js')
		script(src= url + 'assets/plugins/popper.min.js')
		script(src= url + 'assets/plugins/bootstrap.min.js')
		script(src= url + 'assets/js/vendors.js')
		script(src= url + 'assets/js/app.js')
		block script
